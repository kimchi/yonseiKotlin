<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomlinewhite">

    <TextView
        android:id="@+id/a01_05maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="2dp"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/a01_05pic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/a01_05pic"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/a01_05subtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/a01_05maintext"
        app:srcCompat="@drawable/a00_0209comment_box2" />

    <TextView
        android:id="@+id/a01_05subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="12dp"
        android:text="TextView"
        android:textColor="#CCCCCC"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/a01_05pic"
        app:layout_constraintTop_toBottomOf="@+id/a01_05maintext" />

</androidx.constraintlayout.widget.ConstraintLayout>