<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomlinewhite">

    <TextView
        android:id="@+id/a01_16maintext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="2dp"
        android:text="TextView"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/a01_16subtext"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/a01_16pic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/a01_16pic"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/a01_16subtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/a01_16maintext"
        app:srcCompat="@drawable/a00_0209comment_box2" />

    <TextView
        android:id="@+id/a01_16subtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingTop="2dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#CCCCCC"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/a01_16new"
        app:layout_constraintStart_toEndOf="@+id/a01_16pic"
        app:layout_constraintTop_toBottomOf="@+id/a01_16maintext" />

    <TextView
        android:id="@+id/a01_16time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#CCCCCC"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/a01_16maintext"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/a01_16new"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/a01_16subtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a01_16time"
        app:srcCompat="@drawable/chattingnew" />


</androidx.constraintlayout.widget.ConstraintLayout>